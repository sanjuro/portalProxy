create or replace PROCEDURE insert_property
(
    pItemId NUMBER,
    pLabel nvarchar2,
    pViewHint nvarchar2,
    pName nvarchar2,
    pType nvarchar2,
    pInternalValue nvarchar2
)
IS
  property_id NUMBER;
BEGIN

    select hibernate_sequence.nextVal into property_id from dual;

    insert into property_definition (id, label, viewHint, type, name, internalValue, versioning, item_id, user_id)
    select property_id,pLabel,pViewHint,pType,pName,pInternalValue,d.versioning,d.item_id,d.user_id
    from property_definition d where item_id=pItemId and rownum=1;

    insert into acl_object_identity (object_id_class,object_id_identity,parent_object,owner_sid,entries_inheriting)
    select b.object_id_class,property_id,b.parent_object,b.owner_sid,b.entries_inheriting
    from acl_object_identity a,acl_object_identity b
    where a.object_id_identity=pItemId and b.parent_object=a.id and rownum=1;

END;
