CREATE OR REPLACE PROCEDURE property_adder
(
    pItemName nvarchar2,
    pLabel nvarchar2,
    pViewHint nvarchar2,
    pPropertyName nvarchar2,
    pPropertyType nvarchar2,
    pPropertyValue nvarchar2
)
IS
    serverItemId NUMBER;
    portalItemId NUMBER;
    instanceItemId NUMBER;
    personalItemId NUMBER;
    toContinue boolean;
BEGIN
    toContinue := true;

    -- Insert property for server catalog item
    select id into serverItemId from items where name=pItemName and contextItemName= '[BBHOST]';
    insert_property (serverItemId,pLabel,pViewHint,pPropertyName,pPropertyType,pPropertyValue);
    -- Insert property for portal catalog item
    portalItemId:=0;

    while toContinue loop
    BEGIN
        select id into portalItemId from items where extendedItem_id=serverItemId and state='ASSIGNED' and id>portalItemId and rownum=1;
        insert_property(portalItemId,pLabel,pViewHint,pPropertyName,pPropertyType,pPropertyValue);

        -- Insert property for portal instances
        instanceItemId:=0;
        while toContinue loop
        BEGIN
            select id into instanceItemId from items where extendedItem_id=portalItemId and state='INSTANTIATED' and id>instanceItemId and rownum=1;
            insert_property(instanceItemId,pLabel,pViewHint,pPropertyName,pPropertyType,pPropertyValue);
            -- Insert property for personalized items
            personalItemId:=0;
            while toContinue loop
            BEGIN
                select id into personalItemId from items where extendedItem_id=instanceItemId and state='PERSONALIZED' and id>personalItemId and rownum=1;
                insert_property(personalItemId,pLabel,pViewHint,pPropertyName,pPropertyType,pPropertyValue);
            EXCEPTION
                WHEN NO_DATA_FOUND THEN
                    DBMS_OUTPUT.PUT_LINE('No personalized items found.');
                    toContinue:= false;
            END;
            end loop;
            toContinue:= true;
        EXCEPTION
            WHEN NO_DATA_FOUND THEN
               DBMS_OUTPUT.PUT_LINE('No Portal items found.');
               toContinue:= false;
        END;
        end loop;
    EXCEPTION
        WHEN NO_DATA_FOUND THEN
            DBMS_OUTPUT.PUT_LINE('No portal catalog items found.');
    END;
    end loop;
EXCEPTION
    WHEN NO_DATA_FOUND THEN
        DBMS_OUTPUT.PUT_LINE('Server catalog item not found.');
END;
/

