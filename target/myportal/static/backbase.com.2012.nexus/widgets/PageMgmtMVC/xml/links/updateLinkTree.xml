    {{#tags}}
        {{#value}}{{#type}}<tag type="{{type}}">{{value}}</tag>{{/type}}{{^type}}<tag>{{value}}</tag>{{/type}}{{/value}}
    {{/tags}}
    </tags>
    {{/hasTags}}
    {{^hasTags}}
    <tags />
    {{/hasTags}}
</link>