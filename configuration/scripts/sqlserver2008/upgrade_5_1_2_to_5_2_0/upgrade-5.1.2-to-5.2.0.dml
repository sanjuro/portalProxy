       where OBJ.OBJECT_ID_IDENTITY = ite2.id
       and   obj.object_id_class = (select id from acl_class where class = 'com.backbase.portal.foundation.domain.model.Container')
       and   ITE2.NAME = 'PortalLauncherContainer'
