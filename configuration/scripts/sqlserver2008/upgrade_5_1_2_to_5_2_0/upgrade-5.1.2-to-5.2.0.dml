create procedure property_adder
(
    @itemName nvarchar(255),
    @label nvarchar(255),
    @viewHint nvarchar(255),
    @propertyName nvarchar(255),
    @propertyType nvarchar(255),
    @propertyValue nvarchar(756)
)
as
begin
    declare @serverItemId numeric(19,0)
    declare @portalItemId numeric(19,0)
    declare @instanceItemId numeric(19,0)
    declare @personalItemId numeric(19,0)
    -- Insert property for server catalog item
    select @serverItemId=id from items where name=@itemName and contextItemName= '[BBHOST]'
    if (@@rowcount=1)
    begin
        execute insert_property @serverItemId,@label,@viewHint,@propertyName,@propertyType,@propertyValue
        -- Insert property for portal catalog item
        select @portalItemId=0
        while(1=1)
        begin
            select top 1 @portalItemId=id from items where extendedItem_id=@serverItemId and state='ASSIGNED' and id>@portalItemId
            if (@@rowcount=0)
                break
            execute insert_property @portalItemId,@label,@viewHint,@propertyName,@propertyType,@propertyValue
        end
        -- Insert property for portal instances
        select @instanceItemId=0
        while(1=1)
        begin
            select top 1 @instanceItemId=id from items where extendedItem_id=@portalItemId and state='INSTANTIATED' and id>@instanceItemId
            if (@@rowcount=0)
                break
            execute insert_property @instanceItemId,@label,@viewHint,@propertyName,@propertyType,@propertyValue
            -- Insert property for personalized items
            select @personalItemId=0
            while(1=1)
            begin
                select top 1 @personalItemId=id from items where extendedItem_id=@instanceItemId and state='PERSONALIZED' and id>@personalItemId
                if (@@rowcount=0)
                    break
                execute insert_property @personalItemId,@label,@viewHint,@propertyName,@propertyType,@propertyValue
            end
        end
    end
end
