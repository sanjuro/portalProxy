create procedure insert_property
(
    @itemId numeric(19,0),
    @label nvarchar(255),
    @viewHint nvarchar(255),
    @name nvarchar(255),
    @type nvarchar(255),
    @value nvarchar(756)
)
as
begin
    declare
        @property_id numeric(19,0)
    -- Insert property definition
    insert into property_definition (label,viewHint,type,name,internalValue,versioning,item_id,user_id)
    select top 1 @label,@viewHint,@type,@name,@value,versioning,item_id,user_id
    from property_definition where item_id=@itemId
    select @property_id=@@identity
    -- Insert acl security
